<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#31137c"
    android:padding="4dp">


    <LinearLayout
        android:id="@+id/list_view_bought"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3.5"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/track_name_buy"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track name"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/artist_name_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="Artist name "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/album_name_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Album name "
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:singleLine="true"
                android:layout_weight="1"/>

        </LinearLayout>

        <RadioGroup
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy track for 0.99£"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy whole album for 3.99£"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
        </RadioGroup>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card number"
            android:maxLength="19"
            android:textColor="@android:color/white"
            android:inputType="phone"
            android:textColorHint="@android:color/white"
            android:textSize="24sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name On Card"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/date_entry_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Valid until: MM/YYYY"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:inputType="date"
            android:textSize="24sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="CVV"
            android:maxLength="3"
            android:inputType="date"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="24sp"/>

    <Button
        android:id="@+id/button_buy_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape"
        android:text="buy"
        android:padding="8dp"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        />

    </LinearLayout>

</ScrollView>
